<section class="mx-auto flex flex-col gap-6">
  <h2 class="page-title">Sign up</h2>

  <% if resource.errors.any? %>
    <ul class="my-4 text-center">
      <% resource.errors.full_messages.each do |message| %>
        <li class="text-red-600"><%= message %></li>
      <% end %>
    </ul>
  <% end %>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
    <div class="flex flex-col items-center">
      <h4 class="form-fields-name">Name:</h4>
      <%= f.input :name, required: true, autofocus: true, label: false, placeholder: 'Enter your name' %>
      <h4 class="form-fields-name">Email:</h4>
      <%= f.input :email, required: true, label: false, error: false, input_html: { autocomplete: "email", placeholder: 'Enter your email' } %>
      <h4 class="form-fields-name">Password:</h4>
      <p>(min. 6 character)</p>
      <%= f.input :password, required: true, label: false, error: false, input_html: { autocomplete: "new-password", placeholder: 'Enter your password' } %>
      <%= f.input :password_confirmation, required: true, label: false, input_html: { autocomplete: "new-password", placeholder: 'Confirm your password' } %>
      <h4 class="form-fields-name">Bio:</h4>
      <%= f.input :bio, label: false, placeholder: 'Enter your bio' %>
      <h4 class="form-fields-name">Photo link:</h4>
      <%= f.input :photo, label: false, placeholder: 'Enter your photo link' %>
      <%= f.input :posts_counter, as: :hidden, input_html: { value: 0 } %>
    <div>
      <%= f.button :submit, "Sign up", class: "my-4 px-28 custom-border bg-green-400" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</section>
